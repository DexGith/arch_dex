-- ~/.config/nvim/after/plugin/toggleterm.lua

local status_ok, toggleterm = pcall(require, "toggleterm")
if not status_ok then
  return
end

-- General setup for all terminals
toggleterm.setup({
  open_mapping = [[<c-\>]], -- A general mapping to toggle the last used terminal
  start_in_insert = true,
  persist_size = true,
  direction = 'float',
  close_on_exit = true,
  shade_terminals = true,
  shading_factor = 2,
  float_opts = {
    border = 'curved',
    winblend = 0,
    highlights = {
      border = "Normal",
      background = "Normal",
    },
  },
  -- This function is called when a terminal is opened
  on_open = function(term)
    vim.cmd("setlocal nonumber norelativenumber")
    vim.cmd("startinsert!")
    -- Custom keymaps for terminal mode
    local opts = { buffer = term.bufnr }
    vim.keymap.set('t', '<esc>', [[<C-\><C-n>]], opts)
    vim.keymap.set('t', 'jjk', [[<C-\><C-n>]], opts)
    vim.keymap.set('t', '<C-h>', [[<Cmd>wincmd h<CR>]], opts)
    vim.keymap.set('t', '<C-j>', [[<Cmd>wincmd j<CR>]], opts)
    vim.keymap.set('t', '<C-k>', [[<Cmd>wincmd k<CR>]], opts)
    vim.keymap.set('t', '<C-l>', [[<Cmd>wincmd l<CR>]], opts)
  end,
})

-- Function to create and toggle a custom terminal
function _G.set_terminal_toggle(name, cmd, direction, opts)
  local Terminal = require('toggleterm.terminal').Terminal
  local term = Terminal:new({
    cmd = cmd,
    dir = "git_dir",
    direction = direction,
    float_opts = opts and opts.float_opts,
    hidden = true,
  })

  return function()
    term:toggle()
  end
end

-- Create custom terminals
local lazygit_toggle = set_terminal_toggle('lazygit', 'lazygit', 'float', { float_opts = { border = 'double' } })
local ranger_toggle = set_terminal_toggle('ranger', 'ranger', 'float')
local python_toggle = set_terminal_toggle('python', 'python', 'float')
local node_toggle = set_terminal_toggle('node', 'node', 'float')
local htop_toggle = set_terminal_toggle('htop', 'htop', 'float')

-- Normal mode keybindings for custom terminals
vim.keymap.set("n", "<leader>tl", function() lazygit_toggle() end, { noremap = true, silent = true, desc = "Toggle lazygit" })
vim.keymap.set("n", "<leader>tr", function() ranger_toggle() end, { noremap = true, silent = true, desc = "Toggle ranger" })
vim.keymap.set("n", "<leader>tp", function() python_toggle() end, { noremap = true, silent = true, desc = "Toggle python" })
vim.keymap.set("n", "<leader>tn", function() node_toggle() end, { noremap = true, silent = true, desc = "Toggle node" })
vim.keymap.set("n", "<leader>tt", function() htop_toggle() end, { noremap = true, silent = true, desc = "Toggle htop" })

-- Keybindings for different terminal layouts
vim.keymap.set("n", "<leader>tf", "<cmd>ToggleTerm direction=float<CR>", { noremap = true, silent = true, desc = "Toggle float terminal" })
vim.keymap.set("n", "<leader>tv", "<cmd>ToggleTerm direction=vertical<CR>", { noremap = true, silent = true, desc = "Toggle vertical terminal" })
vim.keymap.set("n", "<leader>th", "<cmd>ToggleTerm direction=horizontal<CR>", { noremap = true, silent = true, desc = "Toggle horizontal terminal" })

-- Keybinding for selecting a terminal
vim.keymap.set("n", "<leader>ts", "<cmd>TermSelect<CR>", { noremap = true, silent = true, desc = "Select terminal" })