# /etc/keyd/default.conf

# Use the specific, unchangeable hardware IDs. If you just put names most of the time
# it will not work, at least that's what happened to me.
[ids]
248a:00da
0001:0001

# The [main] layer is for keys in their normal state.
[main]
# Make Caps Lock our dedicated modifier switch.
# When held, activate the [nav] layer.
# When tapped, send the escape key.
# so the order here is important. the name nac is whatever.
# I believe you can put esc instead of writing escape and it would still work
capslock = overload(nav, escape)

# This is your navigation layer, active ONLY when Caps Lock is HELD.
[nav]

# Your existing awesome bindings
# yes thanks ai, these are my nvim like keybinds
h = left
j = down
k = up
l = right
u = pageup
i = pagedown
0 = home
4 = end

# --- New Suggestions ---

# Word-wise navigation
w = C-right
e = C-right
b = C-left
z = C-z
y = C-y
v = C-v
c = C-c

# Deletion
x = delete
backspace = C-backspace

