      <!-- font size in points -->
      <weight>Normal</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
    </font>
    <!-- 'italic' or 'normal' -->
    <font place="ActiveOnScreenDisplay">
      <name>Adobe Courier</name>
      <size>15</size>
      <!-- font size in points -->
      <weight>Normal</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
    </font>
    <!-- 'italic' or 'normal' -->
    <font place="InactiveOnScreenDisplay">
